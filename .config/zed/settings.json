// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.

{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "ssh_connections": [
    {
      "host": "azr-r6id.8xlarge",
      "projects": [
        {
          "paths": ["~/co"]
        },
        {
          "paths": ["~/co/containerd"]
        }
      ]
    }
  ],
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "ui_font_size": null,
  "buffer_font_family": "FiraCode Nerd Font Mono",
  // "buffer_font_family": "Fira Code Retina",
  "buffer_font_size": 15.0,
  "autosave": "on_focus_change",
  "vertical_scroll_margin": 8,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Macchiato - No Italics",
    "dark": "Catppuccin Mocha"
  },
  "terminal": {
    "shell": {
      "program": "nu"
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "rustfmt": {
          "extraArgs": ["+nightly"]
        }
        // "checkOnSave": {
        //   "command": "clippy"
        // }
      }
    },
    "yaml-language-server": {
      "yaml.schemas": {
        "https://raw.githubusercontent.com/yannh/kubernetes-json-schema/master/v1.27.9-standalone-strict/all.json": "/*.yaml"
      }
    },
    "helm-ls": {
      "yamlls": "yaml-language-server"
    }
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ]
  },
  "auto_update": true
}
